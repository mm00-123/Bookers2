<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
   <header class="bg-dark text-white pt-3 pb-4">

      <nav class="navbar navbar-expand-lg navbar-light">
      <div class="b">Bookers2</div>
      </nav>
      <nav>
       <ul class="navbar-nav ml-auto"><nav class="navbar navbar-expand-lg navbar-light">
    <div class="container">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>
         <li class="nav-item"><i class="fas fa-book-open"></i><%= link_to 'Books', books_path %></li>
         <li class="nav-item"><i class="fas fa-users"></i><%= link_to "Users", "/users",class:"users" %></a></li>
         <li class="nav-item"><i class="fas fa-sign-out-alt"></i><%= link_to "log out", destroy_user_session_path, method: :delete %></li>
         <li class="nav-item"><i class="fas fa-home"></i><%= link_to 'Home', user_path(current_user.id) %></li>
       <% else %>
         <li class="nav-item"><i class="fas fa-home"></i><%= link_to"Home",root_path %></li>
         <li class="nav-item"><i class="fas fa-exclamation-circle"></i><%= link_to"About",home_about_path %></li>
         <li class="nav-item"><i class="fas fa-user-plus"></i><%= link_to "sign up", new_user_registration_path %></li>
         <li class="nav-item"><i class="fas fa-sign-in-alt"></i><%= link_to "login", new_user_session_path %></li>
       <% end %>
      </ul>
     </nav>
    </div>
 </header>

 <div class= "body">

    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
  </div>
  <%= yield %>


  <footer>
    <div class='container'>
      <div class='row'>
        <div>
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </div>
  </footer>
  </body>
  </body>
</html>
